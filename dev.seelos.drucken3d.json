{
  "id": "dev.seelos.drucken3d",
  "runtime": "org.gnome.Platform",
  "runtime-version": "master",
  "sdk": "org.gnome.Sdk",
  "command": "drucken3d",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "python-deps",
      "buildsystem": "simple",
      "build-commands": [
          "pip3 install --no-index --find-links=. --prefix=/app Pillow"
      ],
      "sources": [
        {
          "type": "file",
          "path": "data/flatpak-sources/pillow-11.2.1-cp312-cp312-manylinux_2_28_x86_64.whl"
        }
      ]
    },
    {
      "name": "drucken3d",
      "builddir": true,
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "file:///home/phiph/Projects"
        }
      ]
    }
  ]
}